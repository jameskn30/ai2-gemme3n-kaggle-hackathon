# SSH Config file for easier connections
# Replace the examples with your actual server details

# Example for a remote server
Host myserver
    HostName your-server-ip-or-domain.com
    User your-username
    Port 22
    IdentityFile ~/.ssh/id_rsa

# Example for GitHub (if you use it)
Host github.com
    User git
    IdentityFile ~/.ssh/id_rsa

# Example for a different server
Host production
    HostName 192.168.1.100
    User admin
    Port 2222
    IdentityFile ~/.ssh/id_rsa 